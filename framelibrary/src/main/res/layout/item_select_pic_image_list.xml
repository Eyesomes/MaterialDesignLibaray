<?xml version="1.0" encoding="utf-8"?>
<com.exam.cn.framelibrary.selectPic.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.exam.cn.framelibrary.selectPic.view.SquareImageView
        android:layout_width="match_parent"
        android:id="@+id/item_select_pic_pic"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/item_select_pic_mask"
        android:layout_width="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/item_select_pic_right_icon"
        android:layout_margin="5dp"
        android:layout_width="20dp"
        android:background="@drawable/selector_pic_icon"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/item_select_pic_take_pic"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/take_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textColor="#ffffff" />
    </LinearLayout>
</com.exam.cn.framelibrary.selectPic.view.SquareRelativeLayout>